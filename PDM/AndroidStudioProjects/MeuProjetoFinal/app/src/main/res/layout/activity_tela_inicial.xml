<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@color/fundotelas"
    tools:context=".TelaInicial"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/texto_fixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Seja bem vindo, "
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintStart_toEndOf="@+id/imagem_usuario"/>


    <TextView
        android:id="@+id/texto_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/texto_fixo"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="22dp"/>

    <ImageView
        android:id="@+id/imagem_usuario"
        app:srcCompat="@drawable/ic_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/botao_deslogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trocar usuÃ¡rio"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:background="@color/transparente"
        app:layout_constraintTop_toBottomOf="@+id/imagem_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>